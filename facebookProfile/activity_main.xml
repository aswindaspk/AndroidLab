<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="facebook"
        android:textSize="25sp"
        android:background="#4267B2"
        android:paddingLeft="22dp"
        android:textColor="#fff"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Manchester United"
        android:layout_below="@+id/fb"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/textView"
        app:srcCompat="@drawable/cover1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crd1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        app:cardCornerRadius="75dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manchester United"
        android:layout_marginTop="16dp"
        android:layout_below="@id/crd1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports Team"
        android:layout_marginTop="5dp"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/subname"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/chat"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/chatting" />

        <ImageView
            android:id="@+id/eye"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/eye" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/edit" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/home" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Messenger"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="View"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="20sp"
            android:textAlignment="center"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/ll2"
        android:gravity="center"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/pro" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="MANCHESTER UNITED FOOTBALL CLUB LTD"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linear3"
        android:gravity="center"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/web" />

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.manutd.com"
            android:textAlignment="center" />
    </LinearLayout>




</RelativeLayout>